{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": ["main"],
    "permissions": [
        "core:default",
        "opener:default",
        "updater:default",
        "dialog:default",
        "dialog:allow-ask",
        "dialog:allow-message",
        "updater:allow-check",
        "process:allow-restart",
        "updater:allow-download-and-install"
    ]
}
